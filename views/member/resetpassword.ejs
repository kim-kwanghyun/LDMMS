<script>
  function AjaxLogin(){
    const params = new URLSearchParams(window.location.search);
      var sendData = new Object();
      sendData.pwd1 = document.getElementById("pwd1").value;
      sendData.pwd2 = document.getElementById("pwd2").value;
      sendData.member_id = params.get('member_id');
      sendData.randomNumber = params.get('randomNumber');

      if(sendData.pwd1 == sendData.pwd2){
        //alert("비밀번호가 동일합니다.");

        var url = "/member/ajaxpostChangePwd";
        $.ajax({
            url : url
            ,type : "POST"
            ,data : sendData            
            ,success : function(response){ // 성공    
                //alert(JSON.stringify(response));
                if(response.retcode == "success"){
                  //alert("비밀번호가 수정되었습니다.")
                  window.location = "/member/login";
                  
                }else if(response.retcode == "fail"){
                    //alert(response.retmsg);
                    window.location = "/member/login";
                }               
            },
            //요청 실패 시 실행될 콜백 함수 지정
            error : function(xhr, status, error) {
                console.log("error : " + error + ", status : " + status);
            },
            //요청 완료 시 실행될 콜백 함수 지정
            //요청 성공/실패 여부와 관계없이 무조건 실행
            complete : function(xhr, status) {                
                console.log("complete");
                alert("비밀번호가 수정되었습니다.")
                window.location = "/member/login";                
            }           
        });
    
      }else{
        alert("비밀번호가 틀립니다.");
      }
    }
  </script>
  <script>
    function AjaxAppLogin(){
     
      Swal.fire({
          title: '앱 등록이메일을 입력하세요',
          input: 'text',
          inputPlaceholder: '',
          showCancelButton: true,
          confirmButtonText: '확인',
          cancelButtonText: '취소',
          inputValidator: (value) => {
              if (!value) {
                  return 'i-STAM 앱에서 등록한 이메일을 입력해야 합니다!';
              }else{
                var sendData = new Object();
                sendData.email = value;
                sendEmail(sendData)
              }
          }
      }).then((result) => {
          if (result.isConfirmed) {
            var sendData = new Object();
            sendData.email = result.value;
            sendEmail(sendData);           
          }
      });

    }
  </script>
