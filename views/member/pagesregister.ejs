<script>
    function AjaxRegMember(){
       
        var sendData = new Object();
        sendData.email = document.getElementById("email").value;
        sendData.mobile = document.getElementById("mobile").value;
        sendData.password = document.getElementById("password").value;
       
        var url = "/member/regmember";
        $.ajax({
            url : url
            ,type : "POST"
            ,data : sendData            
            ,success : function(response){ // 성공    
                //alert(response);
                if(response.retcode == "success"){
                  alert("회원가입이 완료되었습니다.");
                  window.location = "/member/login";
                  
                }else if(response.retcode == "fail"){
                    //alert(response.retmsg);
                  window.location = "/member/login";
                }               
            },
            //요청 실패 시 실행될 콜백 함수 지정
            error : function(xhr, status, error) {
                console.log("error : " + error + ", status : " + status);
            },
            //요청 완료 시 실행될 콜백 함수 지정
            //요청 성공/실패 여부와 관계없이 무조건 실행
            complete : function(xhr, status) {                
                console.log("complete");
                alert("회원가입이 완료되었습니다.");
                window.location = "/member/login";              
            }           
        });
    }
    </script>
