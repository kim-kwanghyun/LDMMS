 <script>
    function geList(){
        window.location = '/donbang/donbanglist'
    }
    function AjaxLogin(){
       
        var sendData = new Object();
        sendData.livestock_room_nm = document.getElementById("livestock_room_nm").value;        
        sendData.livestock_type = document.getElementById("livestock_type").value;
        sendData.likestock_room_addr1 = document.getElementById("likestock_room_addr1").value;
        sendData.likestock_room_addr2 = document.getElementById("likestock_room_addr2").value;
        sendData.reg_date = document.getElementById("reg_date").value;
        sendData.livestock_room_width1 = document.getElementById("livestock_room_width1").value;
        sendData.livestock_room_height = document.getElementById("livestock_room_height").value;
        sendData.livestock_room_width2 = document.getElementById("livestock_room_width2").value;
        alert(JSON.stringify(sendData));
        // GET 요청을 보낼 URL을 생성합니다.
        var url = "/donbang/Ajaxdonbang_insert";
        $.ajax({
            url : url
            ,type : "POST"
            ,data : sendData            
            ,success : function(response){ // 성공    
                //alert(response);
                if(response.ret == "success"){
                    //alert(JSON.stringify(response))
                    window.location = "/donbang/donbanglist";
                }else if(response.ret == "fail"){
                   // alert(JSON.stringify(response))
                    window.location = "/donbang/donbanglist";
                }               
            },
            //요청 실패 시 실행될 콜백 함수 지정
            error : function(xhr, status, error) {
                console.log("error : " + error + ", status : " + status);
            },
            //요청 완료 시 실행될 콜백 함수 지정
            //요청 성공/실패 여부와 관계없이 무조건 실행
            complete : function(xhr, status) {                
                console.log("complete");                
            }           
        });
    }
</script>
